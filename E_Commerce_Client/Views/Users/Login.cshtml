@model E_Commerce_Client.Models.Users

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<span style="color:red;">@ViewBag.Error</span>
@using (Html.BeginForm())
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Enter Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" type="password" /> 
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="container">
                    <input type="submit" value="Login" class="btn btn-primary w3-hover-brown" name="submit" id="login" />
                    <input type="submit" value="Register" class="btn btn-primary w3-hover-brown" name="submit" id="register" />
                </div>
            </form>
        </div>
    </div>
}
@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>

    h1 {
        background-image: linear-gradient(to right, #cc4400,#4d1a00);
        -webkit-background-clip: text;
        color: transparent;
        transition: all 1.5s;
        margin: 0 auto;
        font-size:80px;
    }

        h1:hover {
            text-decoration: none;
            transform: skewY(3deg) skewX(1deg);
            text-shadow: 20px 12px 20px #331100;
        }



    .btn {
        margin: 30px auto;
        text-decoration: none;
        display:inline-block;
        background-color: white;
        color: saddlebrown;
        border-color:saddlebrown;
    }

        .btn:hover {
            background-image: linear-gradient(to right, #cc4400,#993300);
        }

    label{
        font-size: 20px;
        font-family: 'Courier New';
        color: saddlebrown;
    }
</style>
