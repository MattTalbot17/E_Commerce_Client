@model E_Commerce_Client.Models.Customers

@{
    ViewData["Title"] = "Profile";
     Layout = "~/Views/Shared/CustomerLayout.cshtml";
}
<div>
    @Html.ActionLink("Back to Products", "Index", "Product")
</div>
<h1>Profile</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Username</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        <dt class="col-sm-2">
            <label>Firstname</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt class="col-sm-2">
            <label>last name</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
    </dl>
</div>
<h1>Address</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>Street number</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetNumber)
        </dd>
        <dt class="col-sm-2">
            <label>Street name</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt class="col-sm-2">
            <label>Suburb</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suburb)
        </dd>
        <dt class="col-sm-2">
            <label>Province</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Province)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.CustomerId  }) 
</div>
<div>
    @Html.ActionLink("View Purchase History", "CustomerSaleHistory") 
</div>


<style>

    h1 {
        background-image: linear-gradient(to right, #cc4400,#4d1a00);
        -webkit-background-clip: text;
        color: transparent;
        transition: all 1.5s;
        margin: 0 auto;
        font-size:80px;
    }

        h1:hover {
            text-decoration: none;
            transform: skewY(3deg) skewX(1deg);
            text-shadow: 20px 12px 20px #331100;
        }

    label{
        font-size: 20px;
        font-family: 'Courier New';
        color: saddlebrown;
    }
</style>
